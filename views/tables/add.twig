

{% extends 'layout.twig' %}

{% block body %}
    <div class="sufee-login d-flex align-content-center flex-wrap">
        <div class="container">
            <div class="login-content">
                <div class="login-logo">
                    <a href="/">
                        <img class="align-content" src="/images/logo.png" alt="">
                    </a>
                </div>

                {% if errors.length > 0 %}
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Lỗi</strong>
                    </div>
                    <div class="card-body">
                        {% for error in errors %}
                        <div class="alert alert-danger" role="alert">
                            {{error.msg|e}}
                        </div>
                        {% endfor %}
                    </div>
                </div>
                {% endif %}

                <div class="login-form">
                    <form action="/tables/addProduct" method="POST">
                        <div class="form-group">
                            <label>Tên sản phẩm</label>
                            <input type="name" id="name" name="name" class="form-control" placeholder="Tên sản phẩm">
                        </div>
                        <div class="form-group">
                            <label>Danh mục</label>
                            <select class="form-control" id="category" name='category'>
                            
                            {% for category in dbCategories %}
                                <option value='{{category._id}}'>{{category.name|e}}</option>
                            {% endfor %}
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Thương hiệu</label>
                            <select class="form-control" id="brand" name='brand'>
                            
                            {% for brand in dbBrands %}
                                <option value='{{brand._id}}'>{{brand.name|e}}</option>
                            {% endfor %}
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Ảnh</label>
                            <input type="imageURL" id="image" name="image" class="form-control" placeholder="URL ảnh">
                        </div>
                        <div class="form-group">
                            <label>Giá</label>
                            <input type="price" id="price" name="price" class="form-control" placeholder="Giá tiền">
                        </div>
                        <div class="form-group">
                            <label>Giá giảm</label>
                            <input type="salePrice" id="salePrice" name="salePrice" class="form-control" placeholder="Giá giảm">
                        </div>
                        <div class="form-group">
                            <label>Tình trạng</label>
                            <select class="form-control" id="availability" name='availability'>
                                <option value='Còn hàng'>Còn hàng</option>
                                <option value='Hết hàng'>Hết hàng</option>
                                <option value='Còn ít'>Còn ít</option>
                                <option value='Ngừng kinh doanh'>Ngừng kinh doanh</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary btn-flat m-b-30 m-t-30">Xác nhận</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/jquery@2.2.4/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.4/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-match-height@0.7.2/dist/jquery.matchHeight.min.js"></script>
    <script src="/assets/js/main.js"></script>

            
        
{% endblock %}
