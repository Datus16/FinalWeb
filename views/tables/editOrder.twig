

{% extends 'layout.twig' %}

{% block body %}
    <div class="sufee-login d-flex align-content-center flex-wrap">
        <div class="container">
            <div class="login-content">
                <div class="login-logo">
                    <a href="/">
                        <img class="align-content" src="/images/logo.png" alt="">
                    </a>
                </div>

                {% if errors.length > 0 %}
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Lỗi</strong>
                    </div>
                    <div class="card-body">
                        {% for error in errors %}
                        <div class="alert alert-danger" role="alert">
                            {{error.msg|e}}
                        </div>
                        {% endfor %}
                    </div>
                </div>
                {% endif %}

                <div class="login-form">
                    <form action="/tables/tables-order/edit/{{dbOrder._id}}" method="POST">
                        <div class="form-group">
                            <label>Khách hàng</label>
                            <select class="form-control" id="customer" name='customer'>
                            
                            {% for customer in dbCustomers %}
                                
                                {% if customer._id == dbOrder.customer %}
                                <option selected='selected' value='{{customer._id}}'>{{customer.name|e}}</option>
                                {% else %} 
                                <option value='{{customer._id}}'>{{customer.name|e}}</option>
                                {% endif %} 
                                
                            {% endfor %}
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Sản phẩm</label>
                            <select class="form-control" id="product" name='product'>
                            
                            {% for product in dbProducts %}
                                
                                {% if product._id == dbOrder.product %}
                                <option selected='selected' value='{{product._id}}'>{{product.name|e}}</option>
                                {% else %}
                                <option value='{{product._id}}'>{{product.name|e}}</option>
                                {% endif %} 

                            {% endfor %}
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Số lượng</label>
                            <input type="quantity" id="quantity" name="quantity" class="form-control" placeholder="Số lượng"
                            value='{{dbOrder.quantity}}'>
                        </div>
                        <div class="form-group">
                            <label>Tình trạng</label>
                            <select class="form-control" id="status" name='status'
                            {# {{dbProduct.availability|e}} #}
                            >
                                <option value='Đã giao'>Đã giao</option>
                                <option value='Chưa giao'>Chưa giao</option>
                                <option value='Đang giao'>Đang giao</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary btn-flat m-b-30 m-t-30">Xác nhận</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/jquery@2.2.4/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.4/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-match-height@0.7.2/dist/jquery.matchHeight.min.js"></script>
    <script src="/assets/js/main.js"></script>

            
        
{% endblock %}
