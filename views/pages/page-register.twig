

{% extends 'layout.twig' %}

{% block body %}
    <div class="sufee-login d-flex align-content-center flex-wrap">
        <div class="container">
            <div class="login-content">
                <div class="login-logo">
                    <a href="/">
                        <img class="align-content" src="/images/logo.png" alt="">
                    </a>
                </div>

                {% if errors.length > 0 %}
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Lỗi</strong>
                    </div>
                    <div class="card-body">
                        {% for error in errors %}
                        <div class="alert alert-danger" role="alert">
                            {{error.msg|e}}
                        </div>
                        {% endfor %}
                    </div>
                </div>
                {% endif %}

                <div class="login-form">
                    <form action="/pages/page-register" method="POST">
                        <div class="form-group">
                            <label>Họ tên</label>
                            <input type="name" id="name" name="name" class="form-control" placeholder="Họ tên"
                            {% if name is defined %}
                            value={{name}}
                            {% endif %}>
                        </div>
                        <div class="form-group">
                            <label>Địa chỉ Email</label>
                            <input type="email" id="email" name="email" class="form-control" placeholder="Địa chỉ Email"
                            {% if email is defined %}
                            value={{email}}
                            {% endif %}>
                        </div>
                        <div class="form-group">
                            <label>Mật khẩu</label>
                            <input type="password" id="password" name="password" class="form-control" placeholder="Mật khẩu">
                        </div>
                        <div class="form-group">
                            <label>Xác nhận Mật khẩu</label>
                            <input type="password" id="password2" name="password2" class="form-control" placeholder="Xác nhận mật khẩu">
                        </div>
                        <div class="checkbox">
                            <label>
                                <input type="checkbox">Tôi đồng ý với các điều khoản và quy định
                            </label>
                        </div>
                        <button type="submit" class="btn btn-primary btn-flat m-b-30 m-t-30">Đăng ký</button>
                        <div class="social-login-content">
                            <div class="social-button">
                                <button type="button" class="btn social facebook btn-flat btn-addon mb-3"><i class="ti-facebook"></i>Đăng nhập với Facebook</button>
                            </div>
                        </div>
                        <div class="register-link m-t-15 text-center">
                            <p>Bạn đã có tài khoản? <a href="/pages/page-login">Đăng nhập</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/jquery@2.2.4/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.4/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-match-height@0.7.2/dist/jquery.matchHeight.min.js"></script>
    <script src="/assets/js/main.js"></script>

            
        
{% endblock %}
